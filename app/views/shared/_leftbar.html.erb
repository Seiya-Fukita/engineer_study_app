<div class="flex flex-col justify-between items-center">
  <div class="sticky top-0">
    <%# ページリンクとボタン %>
    <div class="flex flex-col">
      <div class="flex">
        <%= link_to "#", class: "flex items-center hover:bg-gray-200 py-2 px-4 rounded-full" do %>
          <%= image_tag 'logo-black.png', class: "w-8 h-8" %>
        <% end %>
      </div>
      <div class="flex">
        <div class="flex items-center gap-4 hover:bg-gray-200 py-2 px-4 rounded-full">
